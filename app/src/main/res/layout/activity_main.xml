    <!--        android:layout_height="wrap_content"-->
    <!--        android:onClick="goToProductListActivity"-->
    <!--        android:text="Go to product list activity"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        />-->

</androidx.constraintlayout.widget.ConstraintLayout>